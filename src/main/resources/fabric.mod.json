{
  "schemaVersion": 1,
  "id": "welcome",
  "version": "${version}",

  "name": "Welcome",
  "description": "Fabric server mod that creates highly-configurable welcome messages!",
  "authors": [
    "jadelily18"
  ],
  "contact": {
    "homepage": "https://lilydev.com/",
    "issues": "https://github.com/Lilydev-by-jade/Welcome/issues",
    "sources": "https://github.com/Lilydev-by-jade/Welcome"
  },

  "license": "MPL-2.0",
  "icon": "assets/welcome/icon.png",

  "environment": "*",
  "entrypoints": {
    "preLaunch": [
      {
        "adapter": "kotlin",
        "value": "com.lilydev.welcome.WelcomePreLaunch"
      }
    ],
    "server": [
      {
        "adapter": "kotlin",
        "value": "com.lilydev.welcome.WelcomeServer"
      }
    ]
  },
  "mixins": [
    "welcome.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.9",
    "fabric-api": "*",
    "minecraft": "~1.20",
    "java": ">=17",
    "fabric-language-kotlin": "*"
  }
}
